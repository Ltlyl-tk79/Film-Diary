<main>
  <div class="container">
    <div class="row">
      <div class="image-field col-md-7">
        <%= attachment_image_tag(@user, :profile_image, :fill, 250, 170, fallback: "no_image.jpg") %>

        <div class="follow">
          <p>フォロー：
            <%= link_to following_user_path(@user) do %>
              <%= @user.followings.count %>
            <% end %>
          </p>
          <p>フォロワー：
          <%= link_to followers_user_path(@user) do %>
            <%= @user.followers.count %>
          <% end %>
          </p>
        </div>
      </div>

      <div class="introduction-field col-md-4">
        <h2><%= @user.name %></h2>
        <% if @user.id ==current_user.id %>
          <p><%= link_to "Edit", edit_user_path(@user), class:"btn btn-success" %></p>
          <p><%= link_to "New", new_movie_path, class:"btn btn-success" %></p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% @movies.each do |movie| %>
          <div class="movie-item">
            <%= link_to movie_path(movie.id) do %>
              <%= attachment_image_tag(movie, :movie_image, :fill, 200, 200, fallback: "no_image.jpg") %>
            <% end %>
            <p>タイトル：<%= movie.title %></p>
            <!--イイねの数-->
            <!--コメントの数-->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
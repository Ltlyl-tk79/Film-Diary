<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user), class: "btn btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.body %></td>
          <td><%= link_to "show", movie_path(movie), class: "btn btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
